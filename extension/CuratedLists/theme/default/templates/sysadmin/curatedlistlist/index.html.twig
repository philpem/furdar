{% extends 'sysadmin/page.html.twig' %}

{% block pageTitle %}Curated Lists - {% endblock %}

{% block breadcrumbs %}
	<li><a href="/sysadmin/site/{{ site.id }}/">{{ site.title }}</a></li>
	<li class="current"><a href="/sysadmin/site/{{ site.id }}/curatedlist">curated lists</a></li>
{% endblock %}
		
{% block content %}

	<table class="data">
		<tr>
			<th>Slug</th>
			<th>Title</th>
			<th>&nbsp;</th>
		</tr>
		{% for curatedlist in curatedlists %}
			<tr {% if loop.index is even %}class="alternative"{% endif %} >
				<td>{{ curatedlist.slug }}</td>
				<td>{{ curatedlist.title }}</td>
				<td>
					<a href="/sysadmin/site/{{ site.id }}/curatedlist/{{ curatedlist.slug }}" class="button">Show</a>
				</td>
			</tr>
		{% endfor %}
	</table>

{% endblock %}

