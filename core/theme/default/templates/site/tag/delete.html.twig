{% extends 'site/tag/page.html.twig' %}

{% block pageTitle %}Delete {{ tag.title }} - {% endblock %} 

{% block htmlHeader %}
	<META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
	{{ parent() }}
{% endblock %}

{% block actions %}
{% endblock %}

{% block innerContent %}

	<p>Are you sure you want to delete this tag?</p>

	<form action="#" method="post" class="styled">
		<input type="hidden" name="CSFRToken" value="{{ getCSFRToken() }}">
		<input type="hidden" name="delete" value="yes">

		<div class="bigSubmitActionWrapper"><input type="submit"  value="Delete" class="bigSubmitAction"/></div>
		<div class="afterBigSubmitActionWrapper"></div>
	</form>

{% endblock %}
