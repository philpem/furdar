{% extends 'site/media/page.html.twig' %}

{% block pageTitle %}Edit {% if media.title %}{{ media.title }}{% else %}Media{% endif %} - {% endblock %}

{% block htmlHeader %}
	<META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
	{{ parent() }}
{% endblock %}


{% block innerContent %}

	{# We don't client side validate any form with URL fields to get around UI/UX bug. See https://github.com/OpenACalendar/OpenACalendar-Web-Core/issues/221  #}
	<form action="#" method="post" class="styled" novalidate="novalidate">

		{{ form_errors(form) }}

		{{ form_row(form.title) }}
		{{ form_row(form.source_text) }}
		{{ form_row(form.source_url) }}

		{{ form_rest(form) }}

		<div class="bigSubmitActionWrapper"><input type="submit"  value="Save" class="bigSubmitAction"/></div>
		<div class="afterBigSubmitActionWrapper"></div>
	</form>



{% endblock %}

