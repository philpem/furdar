{% extends 'site/area/page.html.twig' %}

{% block pageTitle %}Edit {{ area.title }} - {% endblock %}


{% block htmlHeader %}
	<META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
	{{ parent() }}
{% endblock %}


{% block innerContent %}

	<ul class="actionList">

		{%  if currentUserActions.has("org.openacalendar","actionAreaEditDetails") %}
			<li><a href="/area/{{ area.slugForURL }}/edit/details"><div class="fa fa-pencil"></div> Edit Details</a></li>
		{%  endif %}

		{%  if currentUserActions.has("org.openacalendar","actionAreaEditBounds") %}
			<li><a href="/area/{{ area.slugForURL }}/edit/bounds"><div class="fa fa-pencil"></div> Edit Bounds</a></li>
		{%  endif %}

	</ul>

{% endblock %}


{% block scripts %}
{% endblock %}

