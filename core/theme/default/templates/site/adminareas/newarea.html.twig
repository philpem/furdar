{% extends 'site/page.html.twig' %}


{% block pageTitle %}Admin Areas - {% endblock %} 


{% block breadcrumbs %}
	{%  include 'site/breadcrumbs.html.twig' with { 'breadcrumbs': [
		{ 'url':'/admin', 'label':'admin' },
		{ 'url':'/admin/areas', 'label':'areas in a country' } ,
		{ 'url':'/admin/areas/' ~  country.twoCharCode, 'label': country.title },
		{ 'url':'/admin/areas/' ~  country.twoCharCode ~ '/new', 'label': 'New' }
	]  } %}
{% endblock %}

{% block content %}

	<div class="contentMain">

		<form action="#" method="post" class="styled">

			{{ form_errors(form) }}

			<div class="rowWrapper">
				<div class="labelWrapper">&nbsp;</div>
				<div class="widgetWrapperPlacementOnly">
					<ul id="ChangeVenueAreaList">
						<li class="selectedarea">
							<span class="content">
								<span class="title">{{ country.title }}</span>
							</span>
						</li>
						{% for parentArea in parentAreas %}
							<li class="selectedarea">
								<span class="content">
									<span class="title">{{ parentArea.title }}</span>
								</span>
							</li>
						{% endfor %}
					</ul>
				</div>
				<div class="after"></div>
			</div>


			{{ form_row(form.title) }}
			{{ form_row(form.description) }}
			{{ form_rest(form) }}


			<div class="bigSubmitActionWrapper"><input type="submit"  value="Save" class="bigSubmitAction"/></div>
			<div class="afterBigSubmitActionWrapper"></div>

		</form>

	</div>

{% endblock %}
