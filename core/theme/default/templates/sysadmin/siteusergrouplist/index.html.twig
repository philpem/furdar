{% extends 'sysadmin/page.html.twig' %}

{% block pageTitle %}User Groups for Site - {% endblock %}

{% block breadcrumbs %}
	<li><a href="/sysadmin/site/{{ site.id }}/">{{ site.title }}</a></li>
	<li class="current"><a href="/sysadmin/usergroup">user groups</a></li>
{% endblock %}

{% block content %}

	<table class="data">
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>&nbsp;</th>
		</tr>
		{% for ug in usergroups %}
			<tr {% if loop.index is even %}class="alternative"{% endif %} >
				<td>{{ ug.id }}</td>
				<td>{{ ug.title }}</td>
				<td>
					<a href="/sysadmin/site/{{  site.id }}/usergroup/{{ ug.id }}" class="button">Show</a>
				</td>
			</tr>
		{% endfor %}
	</table>

{% endblock %}

