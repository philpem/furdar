{% extends 'sysadmin/page.html.twig' %}

{% block pageTitle %}Sites - {% endblock %}

{% block content %}

	<table class="data">
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Slug</th>
			<th>&nbsp;</th>
		</tr>
		{% for site in sites %}
			<tr {% if loop.index is even %}class="alternative"{% endif %} >
				<td>{{ site.id }}</td>
				<td>{{ site.title }}</td>
				<td><a href="{{ config.getWebSiteDomainSecure(site.slug) }}">{{ site.slug }}.{{ config.webSiteDomain }}</a></td>
				<td>
					<a href="/sysadmin/site/{{ site.id }}/" class="button">Show</a>
				</td>
			</tr>
		{% endfor %}
	</table>

	<ul class="menuOnPage">
		<li><a href="/sysadmin/site/new">New Site</a></li>
	</ul>

{% endblock %}

