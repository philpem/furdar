{% extends 'sysadmin/page.html.twig' %}

{% block pageTitle %}Events - {% endblock %}

{% block breadcrumbs %}
	<li><a href="/sysadmin/site/{{ site.id }}/">{{ site.title }}</a></li>
	<li class="current"><a href="/sysadmin/site/{{ site.id }}/event">events</a></li>
{% endblock %}
		
		
{% block content %}

	<table class="data">
		<tr>
			<th>Slug</th>
			<th>Title</th>
			<th>Start</th>
			<th>&nbsp;</th>
		</tr>
		{% for event in events %}
			<tr {% if loop.index is even %}class="alternative"{% endif %} >
				<td>{{ event.slug }}</td>
				<td>{{ event.summary }}</td>
				<td>{{ event.startAt |date('D H:i jS M Y' , currentTimeZone) }}</a></td>
				<td>
					<a href="/sysadmin/site/{{ site.id }}/event/{{ event.slug }}" class="button">Show</a>
				</td>
			</tr>
		{% endfor %}
	</table>

{% endblock %}

