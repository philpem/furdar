{% extends 'sysadmin/page.html.twig' %}

{% block pageTitle %}Site Quotas - {% endblock %}

{% block content %}

	<table class="data">
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Code</th>
			<th>&nbsp;</th>
		</tr>
		{% for sitequota in sitequotas %}
			<tr {% if loop.index is even %}class="alternative"{% endif %} >
				<td>{{ sitequota.id }}</td>
				<td>{{ sitequota.title }}</td>
				<td>{{ sitequota.code }}</td>
				<td>
					<a href="/sysadmin/sitequota/{{ sitequota.code }}/" class="button">Show</a>
				</td>
			</tr>
		{% endfor %}
	</table>

{% endblock %}

