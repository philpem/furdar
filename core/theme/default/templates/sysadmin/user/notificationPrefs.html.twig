{% extends 'sysadmin/page.html.twig' %}

{% block pageTitle %}User {{  user.username }} Notify Prefs - {% endblock %}

{% block content %}


	<table class="data">
		<tr>
			<th>Extension</th>
			<th>Type</th>
			<th>Label</th>
			<th>Email</th>
		</tr>
		{% for data in userNotificationPreferences %}
			<tr {% if loop.index is even %}class="alternative"{% endif %} >
				<td>{{  data.pref.userNotificationPreferenceExtensionID }}</td>
				<td>{{  data.pref.userNotificationPreferenceType }}</td>
				<td>{{  data.pref.label }}</td>
				<td>{% if data.userPref.isEmail %}Yes{%  else %}No{%  endif %}</td>
			</tr>
		{% endfor %}
	</table>

{% endblock %}
