{% extends 'index/page.html.twig' %}

{% block pageTitle %}Emails - {% endblock %} 

{% block breadcrumbs %}
	{%  include 'index/breadcrumbs.html.twig' with { 'breadcrumbs': [  { 'url':'/me', 'label':'your account' }, { 'url':'/me/emails','label':'emails' } ]  } %}
{% endblock %}


{% block content %}

	<div class="contentMain">

		<form action="#" method="post" class="styled">

			{{ form_errors(form) }}

			<h3>Upcoming Events</h3>

            {{ form_row(form.org_openacalendar_UpcomingEvents) }}

            {{ form_row(form.email_upcoming_events) }}

            {{ form_row(form.email_upcoming_events_days_notice) }}

			<h3>Other Emails</h3>

			{{ form_rest(form) }}

			<div class="bigSubmitActionWrapper"><input type="submit"  value="Save" class="bigSubmitAction"/></div>
			<div class="afterBigSubmitActionWrapper"></div>
		</form>

	</div>


{% endblock %}


